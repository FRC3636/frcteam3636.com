---
import Article from "../layouts/Article.astro";
import Section from "../components/Section.astro";
import {
    faCalendar,
    faLocationDot,
    faTicket,
} from "@fortawesome/free-solid-svg-icons";
import Detail from "../components/Detail.astro";
import DetailsList from "../components/DetailsList.astro";
import Button from "../components/Button.astro";
import Frame from "../components/Frame.astro";
import { Image } from "astro:assets";
import auctionImg from "../assets/auction/auction-2024.jpeg";
import { DONATE_LINK } from "../links";
---

<Article
    title="Auction and Dinner"
    description="Please join us for an evening of dinner and fun to support\
                Grant High School’s FIRST Robotics Team."
>
    <Section>
        <Image
            src={auctionImg}
            width="800"
            alt="Auction attendees sit around several tables adorned with black tablecloths. In the foreground, two robots\
            are partially in frame."
        />
        <h1>Auction and Dinner</h1>
        <DetailsList>
            <Detail icon={faCalendar}>
                <h2>
                    <a href="/assets/auction/AuctionEvent.ics">
                        March 15, 2025
                    </a>
                </h2>
                <p>6:00 - 10:00 PM</p>
            </Detail>
            <Detail icon={faLocationDot}>
                <h2>Laurelhurst Club</h2>
                <p>3721 SE Ankeny St</p>
                <p>Portland, OR 97214</p>
            </Detail>
            <Detail icon={faTicket}>
                <h2>Admission</h2>
                <p>$40 each</p>
            </Detail>
        </DetailsList>
        <div class="buttons">
            <Button
                theme="primary"
                href="https://www.schoolpay.com/pay/for/Robotics-2025-Fundraising-Auction-Ticket/SeeznZ0"
            >
                Buy tickets
            </Button>
            <Button href={DONATE_LINK}>Donate</Button>
        </div>
    </Section>
    <the-fold></the-fold>
    <Section>
        <div>
            <h2>About the event</h2>
            <p>
                Please join us for an evening of dinner and fun to support Grant
                High School’s FIRST Robotics Team.
            </p>
            <p>Appetizers and dinner are included with your ticket.</p>
            <p>
                <a
                    href="https://frcteam3636.schoolauction.net/roboauction25/"
                    target="_blank">Click here to view full details.</a
                >
            </p>
            <p>
                or <a
                    href="https://frcteam3636.schoolauction.net/roboauction25/catalog"
                    target="_blank"
                >
                browse the catalog</a
            >.
            </p>
        </div>
        <Frame
            src="https://drive.google.com/file/d/1RgW7OGEnyGjNBfZB7YSqoaTURngymnhQ/preview"
            width={800}
            height={500}
            allow="autoplay"
        />
    </Section>
</Article>
